<div class="col-lg-12">

    <% if @admin.errors.any?%>
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <% @admin.errors.full_messages.each do |message|%>

            <ul>
                <li><%= message%></li>
            </ul>
        <%end%>  

    </div>
    <%end%>

        <h1 class="page-header"></h1>
    </div>

        <div class="panel-body">
    <div class="row">
<div class="col-lg-6">
    <%= form_with(model: [:admins_backoffice, @admin], local:true) do |form|%>
        <div class="form-group">
         
            <%=form.label :email %>
            <%= form.text_field :email, class:"form-control",  placeholder:"Email" %>
        </div>

        <div class="form-group">
             <%=form.label :password %>
            <%= form.password_field :password, class:"form-control",  placeholder:"Senha" %>
        </div>

            <div class="form-group">
              <%=form.label :password_confirmation %>
            <%= form.password_field :password_confirmation, class:"form-control",  placeholder:"Confirmação da senha" %>
            </div>

        <button type="submit" class='btn btn-default'> Enviar </button>
      

        
   <%end%>
        </div>
<!-- /.col-lg-6 (nested) -->
    </div>
<!-- /.row (nested) -->
</div>
